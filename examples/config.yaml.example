# LinkedIn Easy Apply Bot Configuration Template
# Copy this file to config.yaml in the project root and fill in your details
# WARNING: Never commit config.yaml with real credentials to version control!

# LinkedIn Credentials
email: your-email@example.com
password: your-password

# AI/LLM Configuration
# OpenAI API key for answering application questions (optional)
# Can also use Groq, Ollama, or other LiteLLM-compatible providers
openaiApiKey: sk-proj-your-openai-api-key
modelName: groq/llama-3.3-70b-versatile  # Example: groq/llama-3.3-70b-versatile, openai/gpt-4o, ollama/mistral

# Bot Behavior Settings
disableAntiLock: False  # Set to True to disable anti-sleep functionality
remote: False  # Set to True to search for remote jobs only
lessthanTenApplicants: False  # Set to True to filter jobs with <10 applicants
newestPostingsFirst: False  # Set to True to sort by date posted

# Job Search Filters
experienceLevel:
  internship: False
  entry: True
  associate: True
  mid-senior level: True
  director: False
  executive: False

jobTypes:
  full-time: True
  contract: True
  part-time: False
  temporary: True
  internship: False
  other: False
  volunteer: False

date:
  all time: True
  month: False
  week: False
  24 hours: False

# Job Positions to Search For (uncomment and add your positions)
positions:
  - Software Engineer
  - Data Scientist
  # - Product Manager
  # - DevOps Engineer

# Job Locations to Search (uncomment and add your locations)
locations:
  - San Francisco, CA
  - New York, NY
  # - Remote
  # - Toronto, ON

residentStatus: False  # Set to True if residing in the country of job
distance: 100  # Allowed values: {0, 5, 10, 25, 50, 100}

# Output Directory
outputFileDirectory: output/

# Blacklists (optional)
companyBlacklist:
  # - Company Name 1
  # - Company Name 2

titleBlacklist:
  # - keyword1
  # - keyword2

posterBlacklist:
  # - name1
  # - name2

# File Uploads
uploads:
  resume: examples/sample_resume.pdf  # Path to your resume
  # coverLetter: path/to/cover_letter.pdf  # Optional cover letter

# Application Form Responses
checkboxes:
  driversLicence: True
  requireVisa: False
  legallyAuthorized: True
  certifiedProfessional: False
  urgentFill: True
  commute: True
  remote: True
  drugTest: True
  assessment: True
  securityClearance: False
  degreeCompleted:
    - Bachelor's Degree
    # - Master's Degree
  backgroundCheck: True

universityGpa: 3.5
salaryMinimum: 80000
noticePeriod: 2  # In weeks

# Languages
languages:
  english: Native or bilingual
  # spanish: Conversational
  # french: Professional

# Years of Experience (add skills relevant to your field)
experience:
  Python: 5
  JavaScript: 3
  SQL: 4
  # Add more skills as needed
  default: 2

# Personal Information
personalInfo:
  Pronouns: They/Them
  First Name: YourFirstName
  Last Name: YourLastName
  Phone Country Code: United States (+1)
  Mobile Phone Number: 1234567890
  Street address: 123 Main Street
  City: San Francisco, California
  State: CA
  Zip: 94102
  Linkedin: https://www.linkedin.com/in/your-profile
  Website: https://github.com/yourusername
  MessageToManager: "Hi, I am interested in joining your organization. Please review my resume. Thank you!"

# EEO Information (US-specific)
eeo:
  gender: None
  race: None
  veteran: None
  disability: None
  citizenship: yes
  clearance: no

# AI Features
evaluateJobFit: False  # Use AI to evaluate job fit before applying
tailorResume: False    # Use AI to tailor resume for each job

# Resume Paths (for AI features)
textResume: examples/sample_text_resume.txt
docxResume: examples/sample_docx_resume.docx

# Debug Mode
debug: False  # Set to True for verbose logging
